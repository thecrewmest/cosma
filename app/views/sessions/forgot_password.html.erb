<% provide :title, 'Bidii | Forgot Password'	 %>

<div class="main-login col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div class="logo text-center">
            <%= image_tag 'user.png', alt: 'user' %>
        </div>
        <!-- start: LOGIN BOX -->
        <div class="box-login">
            <h3 class="text-center">Forgotten your password?</h3>
            <p class="text-center">
                Enter your email to reset your password.<br />
                You may need to check your email.
            </p>

            <%= form_for :user, html: {:class => 'form-login'} do |f| %>
                <fieldset>
                    <div class="form-group">
                        <span class="input-icon">
                          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                    <div class="form-actions">
                        <%= f.submit 'continue', class: 'btn btn-bricky pull-right' %>
                        <!--<button type="submit" class="btn btn-bricky pull-right">-->
                            <!--Continue <i class="fa fa-arrow-circle-right"></i>-->
                        <!--</button>-->
                    </div>
                    <div class="new-account">
                        <span>Don't have an account yet?</span>
                        <%= link_to 'Create an account', signup_path %>
                    </div>
                </fieldset>
          <% end %>
        </div>
        <!-- end: LOGIN BOX -->

        <!-- start: COPYRIGHT -->
        <%= render 'layouts/account_footer' %>
        <!-- end: COPYRIGHT -->
    </div>
