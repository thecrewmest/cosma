<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <link rel="shortcut icon" href="favicon.ico" />
    <!-- start: META -->
    <%= render 'layouts/meta_tags' %>

    <!-- Cross Site Forgery Token -->
    <%= csrf_meta_tags %>

    <!-- Google Fonts -->
    <% if controller_name == 'site' %>
        <link href="https://fonts.googleapis.com/css?family=Hind:400,500,600,700|Montserrat:400,700" rel="stylesheet">
    <% end %>

    <% if controller_name != 'site' %>
        <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700|Raleway:400,100,200,300,500,600,700,800,900/" />
    <% end %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% if controller_name != 'site' %>
        <%= stylesheet_link_tag 'dashboard', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>


    <% if controller_name == 'site' %>
        <%= stylesheet_link_tag  'site', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= include_class %>">
    <%= yield %>


    <%#=	debug(params) if Rails.env.development? %>


    <!-- start: MAIN JAVASCRIPTS -->
    <% if controller_name != 'site' %>
      <%= javascript_include_tag  'footer', 'data-turbolinks-track': 'reload' %>
      <!-- endd  MAIN JAVASCRIPTS -->
     <% end %>

    <% if controller_name == 'site' %>
      <%= javascript_include_tag  'site', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </body>
</html>
